<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easymapua">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyMapua"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".EmailRegister"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminNav" />
        <activity android:name=".ViewSchedule" />
        <activity android:name=".ViewRating" />
        <activity android:name=".ViewMenu" />
        <activity android:name=".AddRate" />
        <activity android:name=".AddFood" />
        <activity android:name=".AddSched" />
        <activity android:name=".VendorNav" />
        <activity android:name=".ProfessorNav" />
        <activity android:name=".StudentNav" />
        <activity
            android:name=".Login"
            android:theme="@style/Theme.Design.Light.NoActionBar">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>